@{
    Layout = "_Layout";
}
<div class="center">
<div class="form-signin w-25 m-auto" style="color: black">
    <form asp-action="Add" method="post">
            <h1 class="h3 mb-3 fw-normal" style="color: white">Введите данные об устройстве</h1>

        <div class="form-floating m-2">
            <input type="text" class="form-control" id="Name" name="Name" required>
                <label for="Name">Название</label>
        </div>
            <div class="form-floating m-2">
                <input type="text" class="form-control" id="ShortDescription" name="ShortDescription" required>
                <label for="ShortDescription">Описание</label>
        </div>
            <div class="form-floating m-2">
                <input type="text" class="form-control" id="LongDescription" name="LongDescription">
                <label for="LongDescription">Полное описание</label>
        </div>
            <div class="form-floating m-2">
            <input type="url" class="form-control" id="Image" name="Image" required>
                <label for="Image">URL картинки</label>
        </div>
            <div class="form-floating m-2">
                <input type="number" class="form-control" id="Price" name="Price">
                <label for="Price">Цена</label>
        </div>
            <div class="form-floating m-2">
                <select class="form-select" aria-label="Default select example" name="roomId" required>
                    @{
                        foreach (Room room in Model.AllRooms)
                        {
                            <option value="@room.Id">@room.Name</option>
                        }
                    }
                </select>
                <label for="roomId">Название дома</label>
        </div>
        <button class="w-50 btn btn-lg btn-primary" type="submit">Добавить</button>
    </form>
</div>
</div>

