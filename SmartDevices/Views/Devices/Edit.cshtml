@{
    Layout = "_Layout";
}
<div class="center">
<div class="form-signin w-25 m-auto" style="color: black">
    <form asp-action="EditDevice" method="post">
            <h1 class="h3 mb-3 fw-normal" style="color: white">Введите данные об устройстве</h1>
        <input type ="hidden" name="Id" value="@Model.CurrentDevice.Id"/>
        <div class="form-floating m-2">
                <input type="text" class="form-control" id="Name" name="Name" value="@Model.CurrentDevice.Name" required>
                <label for="Name">Название</label>
        </div>
            <div class="form-floating m-2">
                <input type="text" class="form-control" id="ShortDescription" name="ShortDescription" value="@Model.CurrentDevice.ShortDescription" required>
                <label for="ShortDescription">Описание</label>
        </div>
            <div class="form-floating m-2">
                <input type="text" class="form-control" id="LongDescription" name="LongDescription" value="@Model.CurrentDevice.LongDescription">
                <label for="LongDescription">Полное описание</label>
        </div>
            <div class="form-floating m-2">
                <input type="url" class="form-control" id="Image" name="Image" value="@Model.CurrentDevice.Image" required>
                <label for="Image">URL картинки</label>
        </div>
            <div class="form-floating m-2">
                <input type="number" class="form-control" id="Price" name="Price" value="@Model.CurrentDevice.Price">
                <label for="Price">Цена</label>
        </div>
            <div class="form-floating m-2">
                <select class="form-select" aria-label="Default select example" name="RoomId" required>
                    @{
                        foreach (Room room in Model.AllRooms)
                        {
                            <option value="@room.Id">@room.Name</option>
                        }
                    }
                </select>
                <label for="RoomId">Название дома</label>
        </div>
        <button class="w-50 btn btn-lg btn-primary" type="submit">Изменить</button>
    </form>
</div>
</div>

